<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    android:background="@drawable/select_icon_option_image"
    
    tools:context="com.asiftanmoy.tictactoe.SelecticonActivity" >
   
     <TextView
         android:id="@+id/select_icon1"
         android:layout_width="150dp"
         android:layout_height="40dp"
         android:layout_alignLeft="@+id/select_icon2"
         android:layout_alignParentTop="true"
         android:layout_marginTop="35dp"
         android:text="@string/select_icon1"
         android:textSize="20dp"
         android:textStyle="bold" />
     
     <RadioGroup
         android:id="@+id/RadioGroup1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="80dp"
         android:orientation="horizontal" >
     
     <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/select_icon1"
        android:layout_below="@+id/select_icon1"
        android:onClick="select"
        android:layout_marginTop="5dp"
        
        android:background="@drawable/sampleicon1"
         />
    
    
    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        
        android:layout_marginTop="5dp"
        
        android:layout_alignBaseline="@+id/radioButton1"
        android:layout_alignBottom="@+id/radioButton1"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        
        android:onClick="select"
        android:background="@drawable/sampleicon2"
        />
    
    
    </RadioGroup>
    
     <RadioGroup
         android:id="@+id/RadioGroup2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/select_icon2"
         android:layout_marginTop="10dp"
         android:orientation="horizontal" >
    
    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
         android:layout_marginTop="15dp"
       
        android:layout_marginLeft="5dp"
        
         android:onClick="select2"
        android:background="@drawable/sampleicon3"
         />
    
    
    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        
         android:layout_alignLeft="@+id/radioButton3"
          android:layout_marginLeft="50dp"
           android:layout_marginTop="15dp"
           android:background="@drawable/sampleicon4"
            android:onClick="select2"
        android:layout_alignBaseline="@+id/radioButton3"
       
        
         />
    
    </RadioGroup>

    <TextView
        android:id="@+id/select_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RadioGroup1"
        android:layout_marginTop="25dp"
        android:text="@string/select_icon2"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>
